<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yo7a.healthwatcher">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.flash" />

    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name="jack.ultrajack.jac.healthwatcher.Login"
            android:configChanges="orientation"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>


        <activity
            android:name="jack.ultrajack.jac.healthwatcher.Primary"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="jack.ultrajack.jac.healthwatcher.AboutApp"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="jack.ultrajack.jac.healthwatcher.BloodPressureResult"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="jack.ultrajack.jac.healthwatcher.HeartRateResult"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="jack.ultrajack.jac.healthwatcher.HeartRateProcess"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="jack.ultrajack.jac.healthwatcher.BloodPressureProcess"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity android:name="jack.ultrajack.jac.healthwatcher.StartVitalSigns"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
    </application>

</manifest>